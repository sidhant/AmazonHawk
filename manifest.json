{
  "name": "AmazonHawk",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Gets you your money back",
  "homepage_url": "http://amazon.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": ["src/bg/background.js"],
    "persistent": true
    },
  "permissions": ["webRequest", "*://*.amazon.com/*"]
}